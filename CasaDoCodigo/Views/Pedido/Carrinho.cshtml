@{
    ViewData["Title"] = "Carrinho";
}

<h3>Meu Carrinho</h3>

<div class="card">
    <div class="card-header">

        <div class="row">
            <div class="col-md-6">
                Item
            </div>
            <div class="col-md-2 text-center">
                Preço Unitário
            </div>
            <div class="col-md-2 text-center">
                Quantidade
            </div>
            <div class="col-md-2">
                <span class="float-right">
                    Subtotal
                </span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row row-center linha-produto">
            <div class="col-md-3">
                <img class="img-produto-carrinho" src="/images/produtos/large_047.jpg" />
            </div>
            <div class="col-md-3">Arduino Pr&#xE1;tico</div>
            <div class="col-md-2 text-center">R$ 69,90</div>
            <div class="col-md-2 text-center">
                <div class="input-group">
                    <span class="input-group-prepend">
                        <button class="btn btn-outline-secondary">
                            -
                        </button>
                    </span>
                    <input type="text" value="2"
                           class="form-control text-center" />
                    <span class="input-group-append">
                        <button class="btn btn-outline-secondary">
                            +
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-md-2">
                R$ <span class="float-right" subtotal>
                    139,80
                </span>
            </div>
        </div>
        <div class="row row-center linha-produto">
            <div class="col-md-3">
                <img class="img-produto-carrinho" src="/images/produtos/large_035.jpg" />
            </div>
            <div class="col-md-3">PostgreSQL</div>
            <div class="col-md-2 text-center">R$ 69,90</div>
            <div class="col-md-2 text-center">
                <div class="input-group">
                    <span class="input-group-prepend">
                        <button class="btn btn-outline-secondary">
                            -
                        </button>
                    </span>
                    <input type="text" value="3"
                           class="form-control text-center" />
                    <span class="input-group-append">
                        <button class="btn btn-outline-secondary">
                            +
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-md-2">
                R$ <span class="float-right" subtotal>
                    209,70
                </span>
            </div>
        </div>
        <div class="row row-center linha-produto">
            <div class="col-md-3">
                <img class="img-produto-carrinho" src="/images/produtos/large_042.jpg" />
            </div>
            <div class="col-md-3">Scala</div>
            <div class="col-md-2 text-center">R$ 69,90</div>
            <div class="col-md-2 text-center">
                <div class="input-group">
                    <span class="input-group-prepend">
                        <button class="btn btn-outline-secondary">
                            -
                        </button>
                    </span>
                    <input type="text" value="1"
                           class="form-control text-center" />
                    <span class="input-group-append">
                        <button class="btn btn-outline-secondary">
                            +
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-md-2">
                R$ <span class="float-right" subtotal>
                    69,90
                </span>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-md-10">
                <span numero-itens>
                    Total: 3
                    itens
                </span>
            </div>
            <div class="col-md-2">
                Total: R$ <span class="float-right" total>
                    419,40
                </span>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="float-right">
            <a class="btn btn-success" href="/">
                Adicionar Produtos
            </a>
            <a class="btn btn-success" href="/">
                Preencher Cadastro
            </a>
        </div>
    </div>
</div>
